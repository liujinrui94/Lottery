<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tab_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/whiteTextColor"
            android:textSize="@dimen/max_textsize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_toolbar_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_query_normal" />

    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/home_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/home_main_radio"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/profit_account_balance_rb"
            style="@style/MyTabButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="首页"
            android:textColor="@drawable/selector_tab_menu_text_color" />

        <RadioButton
            android:id="@+id/profit_cumulative_development_rb"
            style="@style/MyTabButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开奖"
            android:textColor="@drawable/selector_tab_menu_text_color" />

        <RadioButton
            android:id="@+id/profit_month_income_rb"
            style="@style/MyTabButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="过滤"
            android:textColor="@drawable/selector_tab_menu_text_color" />

        <RadioButton
            android:id="@+id/profit_improve_earnings_rb"
            style="@style/MyTabButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="新闻"
            android:textColor="@drawable/selector_tab_menu_text_color" />
    </RadioGroup>

</LinearLayout>

